<h1>Your order info</h1>
<h3>Purchased at: <%= @order.created_at %>
<h3>Email: <%= current_user.email %></h3>


<% @order.carted_products.each do |carted_product| %>
  <h2>Name: <%= carted_product.produc_app.name %></h2>
  <h5>Quantity: <%= carted_product.quantity %></h5>
<% end %>

<h3>Subtotal: <%= @order.subtotal %></h3>
<h3>Tax: <%= @order.tax %></h3>
<h3>Total: <%= @order.total %></h3>
