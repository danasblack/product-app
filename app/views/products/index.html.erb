<div class="row">
	<div class="page-header">

		<h1><span>Hundreds of the Hottest Styles</span></h1>
		<button class="btn btn-default" type="submit">Shop Now</button>
	</div>
</div> 



<!-- Page Photos -->
<div class="container-display">
	<div class="row">
		<div class="col-md-6"><%= image_tag "jordans_page.jpg",  id: "page-photo-one" %></div>
		<div class="col-md-6"><%= image_tag "reebox_page.jpg",  id: "page-photo-two" %></div>
	</div>
</div>

<!-- About Us -->
<div class="container">
	<div class="about">
		<h2><span> How it Works </span></h2>
		<div class="row">
			<div class="col-md-4">
				<div class="well" id="about-well">
					<h4>Sellers submit photos of sneakers to us for evaluation</h4>
					<i class="fa fa-long-arrow-right" id="arrow-one" style="font-size:80px;color:black;" aria-hidden="true"></i>
				</div>
			</div>

			<div class="col-md-4">
				<div class="well" id="about-well">
					<h4>Second point</h4>
					<i class="fa fa-long-arrow-right" id="arrow-two" style="font-size:80px;color:black;" aria-hidden="true"></i>
				</div>
			</div>

			<div class="col-md-4">
				<div class="well" id="about-well">
					<h4>Third point</h4>
				</div>
			</div>
		</div>
	</div>
</div>

<!-- Page Content -->
<div class="container-products">
	<h5>You are currently logged in as</h5>

	<div class="row">

		<div class="col-md-3">
			<p class="lead">Find Shoes</p>
			<div class="list-group">
				<a href="#" class="list-group-item">Children</a>
				<a href="#" class="list-group-item">Women</a>
				<a href="#" class="list-group-item">Men</a>
			</div>
		</div>

		<div class="col-md-9">

			<div class="row carousel-holder">

				<div class="col-md-12">
					<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
						<ol class="carousel-indicators">
							<li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
							<li data-target="#carousel-example-generic" data-slide-to="1"></li>
							<li data-target="#carousel-example-generic" data-slide-to="2"></li>
						</ol>
						<div class="carousel-inner">
							<div class="item active">
								<img class="slide-image" src="/assets/sale_banner.jpg" alt="">
							</div>
							<div class="item">
								<img class="slide-image" src="/assets/hiking.jpg" alt="">
							</div>
							<div class="item">
								<img class="slide-image" src="/assets/skateboards_pic.jpg" alt="">
							</div>
						</div>
						<a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
							<span class="glyphicon glyphicon-chevron-left"></span>
						</a>
						<a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
							<span class="glyphicon glyphicon-chevron-right"></span>
						</a>
					</div>
				</div>

			</div>  
			
		</div>
		<div ng-app="app">
			<div class="page" ng-controller='pageCtrl'>
				<div class="row">
					<p><a href="/products?sort=price">Sort (highest to lowest price)</a>|<a href="/products?sort.desc=price">(lowest to highest price)</a></p>
					<!-- <div class="col-sm-4 col-lg-4 col-md-4"> -->
					<div ng-repeat="product in products" class="col-md-4">
						<div class="well" id="shoe-well">
							<img ng-src="{{product.photo}}" id="shoe-picture"> 
							<h5>Type: {{product.name}}</h5>
							<h5>Price: {{product.price | currency}}</h5>
							<div class="ratings">
								<p class="pull-right">15 reviews</p>
								<p>
									<span class="glyphicon glyphicon-star"></span>
									<span class="glyphicon glyphicon-star"></span>
									<span class="glyphicon glyphicon-star"></span>
									<span class="glyphicon glyphicon-star"></span>
									<span class="glyphicon glyphicon-star"></span>
								</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>


